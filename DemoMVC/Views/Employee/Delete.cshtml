@model DemoMVC.Models.Employee

<h2>Thêm nhân viên</h2>
<form asp-action="Create" method="post">
    <label>Person ID:</label>
    <input type="text" asp-for="PersonId" required /><br>

    <label>Full Name:</label>
    <input type="text" asp-for="FullName" required /><br>

    <label>Address:</label>
    <input type="text" asp-for="Address" required /><br>

    <label>Employee ID:</label>
    <input type="text" asp-for="EmployeeID" required /><br>

    <label>Age:</label>
    <input type="number" asp-for="Age" required /><br>

    <button type="submit">Thêm</button>
</form>
<a href="/Employee/Index">Quay lại danh sách</a>
